{
  "name": "dev-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Dev Platform",
  "type": "module",
  "engines": {
    "node": ">=22.20.0"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:cov": "turbo test:cov",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "pnpm -w lint && pnpm -w format:check",
    "prepare": "husky",
    "commitlint": "commitlint",
    "clean": "rm -rf node_modules .turbo packages/*/dist apps/*/dist",
    "storybook": "pnpm --filter=@dev-platform/ui storybook",
    "storybook:build": "pnpm --filter=@dev-platform/ui build-storybook",
    "docker:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:ps": "docker compose -f docker-compose.dev.yml ps",
    "docker:restart": "docker compose -f docker-compose.dev.yml restart"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.39.1",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.0",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-storybook": "^10.0.6",
    "eslint-plugin-unused-imports": "4.3.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "turbo": "2.6.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3"
  }
}
