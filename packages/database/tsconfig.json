{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/__mocks__/*": ["tests/__mocks__/*"],
      "@/tests/repositories/__mocks__": [
        "tests/unit/repositories/__mocks__/index"
      ],
      "@/tests/*": ["tests/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist", "prisma"]
}
